{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@HomeScreen/*": ["src/screens/HomeScreen/*"],
      "@SignIn/*": ["src/screens/SignIn/*"],
      "@ClotheScreen/*": ["src/screens/ClotheScreen/*"],

      "@Components/*": ["src/components/*"],
      "@Config/*": ["src/config/*"],
      "@Routes/*": ["src/config/routes/*"]
    }
  }
}
